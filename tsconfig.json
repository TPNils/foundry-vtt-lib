{
  "compilerOptions": {
    "outDir": "dist",
    "moduleResolution": "node16",
    "target": "ES6",
    "declaration": true,
    "experimentalDecorators": true,
    "lib": ["DOM", "ES6", "ES2017", "ES2018", "ES2019", "ES2020"],
    "skipLibCheck": true,
    "sourceMap": true,
    "allowUmdGlobalAccess": true
  },
  "include": [ "src/**/*" ],
  "exclude": ["node_modules"],
  "ts-node": {
    "compilerOptions": {
      "strictNullChecks": false,
      "allowSyntheticDefaultImports": false,
      "skipLibCheck": true
    }
  }
}